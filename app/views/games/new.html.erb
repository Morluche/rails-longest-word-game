<h1>New game</h1>
  <div class="letters mb-3">
    <% @letters.each do |letter| %>
        <div><%= letter %></div>
    <% end %>
  </div>
  <div class="user-input" id="wrap">
     <form action="/score" class="form-control form-control-lg" method="post" autocomplete="on">
       <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
       <%= hidden_field_tag :grid, @letters %>
       <div class="input-group mb-3">
         <input type="text" name="word" class="form-control" id="search" placeholder="What is the longest word ?">
         <div class="input-group-append">
          <input id="search_submit" value="Rechercher" type="submit">
         </div>
     </form>
   </div>

